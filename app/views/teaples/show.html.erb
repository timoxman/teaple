

<section id="profile">
  <h3><span class="prof">Name:</span> <%= @teaple.name %></h3>
  <p><span class="prof">Bio:</span> <%= @teaple.bio %></p>
  <p><span class="prof">Location:</span> <%= @teaple.location %></p>

  <% if @teaple.image_file_name %>
    <p> <%= image_tag @teaple.image.url(:thumb) %></p>
  <% end %>

  <p><span class="prof">Created by:</span> <%= @creator %></p>
  <p><span class="prof">Long/Lat:</span> <%= "#{@teaple.latitude}, #{@teaple.longitude}" %></p>

  <div>
    <% if @teaple.postcode.length != 0 %>
      <div id="geolocation" style="width: 100%; height: 400px; border:3px solid #999;border-radius:10px;
            box-shadow:1px 2px 7px rgba(0,0,0,.3);">
      </div>
    <% end %>
  </div>


  <br/>
  <p><a class="button" href="/teaples">Back to home page</a></p>

</section>

<script>
  <%= render partial: 'teaples/js/gmaps', formats: [:js] %>
</script>
